<h1><%= @subscription.title %></h1>

<p><%= @subscription.price %></p>

<ul>
    <li><%= link_to "Edit", edit_subscription_path(@subscription) %></li>
    <li>
        <%= link_to "Destroy", subscription_path(@subscription), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
</ul>

<h2>Comments</h2>
<%= form_with mode: [@subscription, @subscription.comments.build] do |form| %>
    <p>
        <%= form.label :commenter %><br>
        <%= form.text_field :commenter %>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>
